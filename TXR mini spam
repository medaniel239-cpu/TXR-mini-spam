Instance.new("UICorner", log).CornerRadius = UDim.new(0, 10)

-- ================= BUTTONS =================
local function makeButton(y, text)
    local b = Instance.new("TextButton", main)
    b.Position = UDim2.fromScale(0.05, y)
    b.Size = UDim2.fromScale(0.42, 0.1)
    b.Text = text
    b.Font = Enum.Font.GothamBold
    b.TextSize = 14
    b.TextColor3 = Color3.fromRGB(20,20,25)
    b.BackgroundColor3 = Color3.fromRGB(180,180,220)
    b.BorderSizePixel = 0
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 12)
    return b
end

local onBtn  = makeButton(0.65, "ON")
local offBtn = makeButton(0.65, "OFF")
offBtn.Position = UDim2.fromScale(0.53, 0.65)

local extraBtn = Instance.new("TextButton", main)
extraBtn.Position = UDim2.fromScale(0.05, 0.78)
extraBtn.Size = UDim2.fromScale(0.9, 0.1)
extraBtn.Text = "Send Extra Message"
extraBtn.Font = Enum.Font.GothamBold
extraBtn.TextSize = 14
extraBtn.TextColor3 = Color3.fromRGB(230,230,240)
extraBtn.BackgroundColor3 = Color3.fromRGB(60,60,90)
extraBtn.BorderSizePixel = 0
Instance.new("UICorner", extraBtn).CornerRadius = UDim.new(0, 12)

-- ================= COLLAPSE BUTTON =================
local toggleGui = Instance.new("TextButton", gui)
toggleGui.Size = UDim2.fromScale(0.05, 0.08)
toggleGui.Position = UDim2.fromScale(0.01, 0.45)
toggleGui.Text = "â‰¡"
toggleGui.Font = Enum.Font.GothamBold
toggleGui.TextSize = 22
toggleGui.TextColor3 = Color3.fromRGB(230,230,240)
toggleGui.BackgroundColor3 = Color3.fromRGB(30,30,40)
toggleGui.BorderSizePixel = 0
Instance.new("UICorner", toggleGui).CornerRadius = UDim.new(0, 12)

-- ================= LOGIC =================
local running = false
local spamDelay = 0.33 -- 1 second me 3 (FAST)

local function appendLog(txt)
    log.Text = log.Text .. "\n" .. txt
end

local function targetExists(name)
    if name == "" then return true end
    return Players:FindFirstChild(name) ~= nil
end

task.spawn(function()
    while true do
        task.wait(spamDelay)
        if running then
            local target = targetBox.Text
            if not targetExists(target) then
                appendLog("Target left. Auto-stopped.")
                running = false
            else
                appendLog("Sent (demo): " .. (messageBox.Text ~= "" and messageBox.Text or "[empty]"))
            end
        end
    end
end)

-- ================= BUTTON EVENTS =================
onBtn.MouseButton1Click:Connect(function()
    running = true
    appendLog("ON enabled.")
end)

offBtn.MouseButton1Click:Connect(function()
    running = false
    appendLog("OFF pressed.")
end)

extraBtn.MouseButton1Click:Connect(function()
    appendLog("Extra sent (demo): ainhoekwodbofnekdnfofnfifbfkfndbkdbf")
end)

toggleGui.MouseButton1Click:Connect(function()
    main.Visible = not main.Visible
end)
