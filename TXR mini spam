-- ================= INPUTS =================
local function makeBox(y, placeholder)
    local box = Instance.new("TextBox", main)
    box.Position = UDim2.fromScale(0.05, y)
    box.Size = UDim2.fromScale(0.9, 0.09)
    box.PlaceholderText = placeholder
    box.Text = ""
    box.Font = Enum.Font.Gotham
    box.TextSize = 14
    box.TextColor3 = Color3.fromRGB(230,230,230)
    box.BackgroundColor3 = Color3.fromRGB(35,35,45)
    box.BorderSizePixel = 0
    Instance.new("UICorner", box).CornerRadius = UDim.new(0, 10)
    return box
end

local targetBox = makeBox(0.22, "Target Player Name (optional)")
local messageBox = makeBox(0.33, "Your custom message here")

-- ================= LOG AREA =================
local log = Instance.new("TextLabel", main)
log.Position = UDim2.fromScale(0.05, 0.44)
log.Size = UDim2.fromScale(0.9, 0.18)
log.BackgroundColor3 = Color3.fromRGB(25,25,35)
log.TextWrapped = true
log.TextYAlignment = Top
log.TextXAlignment = Left
log.Text = "Status log will appear here..."
