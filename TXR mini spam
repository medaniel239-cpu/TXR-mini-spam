local Players = game:GetService("Players")
local player = Players.LocalPlayer
local RunService = game:GetService("RunService")

-- ================= UI SETUP =================
local gui = Instance.new("ScreenGui")
gui.Name = "LuxuryDemoGUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local main = Instance.new("Frame", gui)
main.Size = UDim2.fromScale(0.32, 0.45)
main.Position = UDim2.fromScale(0.34, 0.27)
main.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
main.BorderSizePixel = 0
main.Name = "Main"

local corner = Instance.new("UICorner", main)
corner.CornerRadius = UDim.new(0, 18)

local stroke = Instance.new("UIStroke", main)
stroke.Color = Color3.fromRGB(120, 120, 140)
stroke.Thickness = 1
stroke.Transparency = 0.4

-- ================= TITLE =================
local title = Instance.new("TextLabel", main)
title.Size = UDim2.fromScale(1, 0.12)
title.BackgroundTransparency = 1
title.Text = "Luxury Message Tool (Demo)"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(230,230,240)

local credit = Instance.new("TextLabel", main)
credit.Position = UDim2.fromScale(0, 0.12)
credit.Size = UDim2.fromScale(1, 0.06)
